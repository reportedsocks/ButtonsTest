<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        tools:context=".MainActivity"
        android:background="@drawable/bg_main_2160x3840">
        <ImageView
            android:id="@+id/flag"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/tb_ph_flag"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/pause_image"
            android:layout_width="130dp"
            android:layout_height="82dp"
            android:layout_alignEnd="@id/flag"
            android:layout_alignTop="@id/flag"
            android:layout_marginTop="-30dp"
            android:layout_marginEnd="-120dp"
            android:src="@drawable/tb_ic_pause" />
        <ImageView
            android:id="@+id/play_image"
            android:layout_width="130dp"
            android:layout_height="72dp"
            android:layout_alignEnd="@id/flag"
            android:layout_alignBottom="@id/pause_image"
            android:layout_marginBottom="-70dp"
            android:layout_marginEnd="-130dp"
            android:src="@drawable/tb_ic_normal" />
        <ImageView
            android:id="@+id/accelerated_image"
            android:layout_width="130dp"
            android:layout_height="82dp"
            android:layout_alignEnd="@id/flag"
            android:layout_alignBottom="@id/play_image"
            android:layout_marginBottom="-80dp"
            android:layout_marginEnd="-120dp"
            android:src="@drawable/tb_ic_accelerated" />

        <TextView
            android:gravity="center"
            android:text="01.01.1917"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:textColor="@android:color/white"
            android:layout_alignTop="@id/flag"
            android:layout_alignStart="@id/flag"
            android:layout_marginStart="20dp"
            android:background="@drawable/tb_ph_date"/>
        <ImageView
            android:id="@+id/menu_image"
            android:layout_width="130dp"
            android:layout_height="69dp"
            android:src="@drawable/tb_ic_menu"
            android:layout_alignStart="@id/flag"
            android:layout_alignTop="@id/flag"
            android:layout_marginStart="-120dp"
            android:layout_marginTop="5dp"/>
        <ImageView
            android:id="@+id/shop_image"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:src="@drawable/tb_ic_shop"
            android:layout_alignStart="@id/flag"
            android:layout_alignBottom="@id/menu_image"
            android:layout_marginStart="-120dp"
            android:layout_marginBottom="-70dp"/>
            
    </RelativeLayout>
